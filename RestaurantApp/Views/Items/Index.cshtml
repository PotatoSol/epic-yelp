@{
  Layout = "_Layout";
}
@using RestaurantApp.Models;

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
}

<table class="table align-middle mb-0 bg-white">
  
  <thead class="bg-light">
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Actions</th> 
    </tr>
  </thead>

  <tbody>
    @foreach (Item item in Model)
    {
      <tr>
        
        
        <td>
          <div class="d-flex align-items-center">
            <div class="ms-3">
              @item.ItemName
            </div>
          </div>
        </td>
        
        <td>
          <p class="fw-normal mb-1">@item.ItemPrice</p>
        </td>
        
        <td>
          <button type="button" class="btn btn-link btn-sm btn-rounded">
            @Html.ActionLink("Edit", "Details", new { id = item.ItemId })
          </button>
        </td> 
    
    </tr>
    }
  </tbody>
</table>

<button type="button" class="btn btn-primary me-3">
  <a class="text-white" href="@Url.Action("Create","Items")">Add New Item</a>
</button>