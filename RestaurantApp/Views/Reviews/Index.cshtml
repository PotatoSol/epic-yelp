@{
  Layout = "_Layout";
}
@using RestaurantApp.Models;


@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
}

<table class="table align-middle mb-0 bg-white">
  
  <thead class="bg-light">
    <tr>
      <th>Review Title</th>
      <th>Review Message</th>
      <th>Review Details</th> 
    </tr>
  </thead>

  <tbody>
    @foreach (Review review in Model)
    {
      <tr> @* begining of the first row *@
        
        
        <td>
          <div class="d-flex align-items-center">
            <div class="ms-3">
              @review.ReviewTitle
            </div>
          </div>
        </td>
        
        <td>
          <p class="fw-normal mb-1">@review.ReviewText</p>
        </td>
        
        <td>
          <button type="button" class="btn btn-link btn-sm btn-rounded">
            @Html.ActionLink("Details", "Details", new { id = review.ReviewId })
          </button>
        </td> 
    
    </tr>
    }
  </tbody>
</table>

<button type="button" class="btn btn-primary me-3">
  <a class="text-white" href="@Url.Action("Create","Reviews")">Add New Review</a>
</button>

