@{
  Layout = "_Layout";
}
@using RestaurantApp.Models;


@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
}
<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name of Restaurant</th>
      <th>Hours</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    @foreach (Restaurant restaurant in Model)
    {
      <tr> @* begining of first row *@
        <td>
          <div class="d-flex align-items-center">
            <div class="ms-3">
              @restaurant.RestaurantName
            </div>
          </div>
        </td>
        <td>
          <p class="fw-normal mb-1">@restaurant.RestaurantHours</p>
        </td>
        <td>
          <button type="button" class="btn btn-link btn-sm btn-rounded">
            @Html.ActionLink("Edit", "Details", new { id = restaurant.RestaurantId })
          </button>
        </td>
      </tr>
    }
  </tbody>
</table>
@* <p>@Html.ActionLink("Add New Restaurant", "Create")</p> *@

<button type="button" class="btn btn-primary me-3">
  <a class="text-white" href="@Url.Action("Create","Restaurants")">Add New Restaurant</a>
</button>

