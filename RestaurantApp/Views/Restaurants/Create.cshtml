@{
  Layout = "_Layout";
}

@model RestaurantApp.Models.Restaurant

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      @using (Html.BeginForm(new { @class = "form-horizontal" }))
      {
        <div class="form-group">
          @Html.LabelFor(model => model.RestaurantName, "Restaurant Name")
          @Html.TextBoxFor(model => model.RestaurantName, new { @class="form-control col-sm-3", id="control-id2"})
        </div>
        <div class="form-group">
          @Html.LabelFor(model => model.RestaurantHours, "Restaurant Hours")
          @Html.TextBoxFor(model => model.RestaurantHours, new { @class="form-control col-sm-3", id="control-id4"})
        </div>

        <input type="submit" class="btn btn-primary" value="Add New Restaurant" />
      }
      <br>
      <button type="button" class="btn btn-primary me-3 text-white">
        <a class="text-white" href="@Url.Action("Index","Restaurants")">Back</a>
      </button>
    </div>
  </div>
</div>